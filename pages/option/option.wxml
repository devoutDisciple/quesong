<!--pages/opinion/opinion.wxml-->
<view class="option">
	<form bindsubmit="formSubmit" bindreset="formReset">
		<van-row custom-class="option_row">
			<textarea class="option_row_textarea" placeholder="请输入您的意见以便于我们提供更好的帮助"></textarea>
		</van-row>
		<van-row custom-class="option_row">
			<button class="option_row_btn" form-type="submit">确定</button>
		</van-row>
	</form>
</view>
