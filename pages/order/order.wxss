.order{
	width: calc(100vw - 20px);
	margin-left: 10px;
	height: 100vh;
	overflow: hidden;
	font-size: 14px;
	color: #333;
}
.order_content{
	width: 100%;
	height: 100vh;
}
.order_content_item{
	width: 100%;
}
.order_content_item_title{
	height: 30px;
	position: relative;
}
.order_content_item_title_img{
	width: 30px;
	height: 30px;
}
.order_content_item_title_img image{
	width: 100%;
	height: 100%;
}
.order_content_item_title_name{
	height: 30px;
	margin-left: 10px;
}
.order_content_item_title_name_shop{
	height: 20px;
	line-height: 20px;
	font-size: 14px;
}
.order_content_item_title_name_time{
	height: 10px;
	font-size: 10px;
	color: #9e9e9e;
	line-height: 10px;
}
.order_content_item_title_state{
	position: absolute;
	font-size: 14px;
	right: 0;
	bottom: 0;
}
.order_content_item_desc{
	margin-left: 40px;
	margin-top: 10px;
	height: 20px;
	font-size: 12px;
	position: relative;
}
.order_content_item_desc_price{
	position: absolute;
	right: 0;
	top: 0;
}
.order_content_item_footer{
	text-align: right;
	margin-left: 40px;
	margin-top: 10px;
	border-bottom: 1px solid #ebebeb;
	margin-bottom: 10px;
	padding-bottom: 10px;
}
.order_content_item_footer text{
	border: 1px solid #94f2d7;
	padding: 5px 10px;
	margin-left: 10px;
	border-radius: 5px;
}
