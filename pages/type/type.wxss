/* pages/type/type.wxss */
.type{
    height: 100vh;
    width: 100%;
    overflow: hidden;
}
.type_search{
    height: 60px;
}
.type_content{
    height: calc(100vh - 60px);
    width: 100%;
}
.type_content_scroll{
    height: calc(100vh - 104px);
    width: 100%;
}
.type_content_empty{
	height: calc(100vh - 104px);
	width: 100%;
	line-height: calc(100vh - 104px);
	text-align: center;
	color: #e8e8e8;
}
.home_content_goods_item{
    height: 100px;
}
.home_content_goods_item_img{
    height: 100px;
    width: 100px;
    text-align: center;
    padding-top: 10px;
}
.home_content_goods_item_img image{
    height: 80px;
    width: 80px;
}
.home_content_goods_item_introduce{
    width: calc(100vw - 110px);
    height: 100%;
    font-size: 14px;
    padding-top: 10px;
    border-bottom: 1px solid #ededed;
}
.home_content_goods_item_introduce_title{
    font-size: 14px;
    height: 20px;
    line-height: 20px;
}
.home_content_goods_item_introduce_sale{
    font-size: 10px;
    color: #8b8b8b;
    height: 20px;
    line-height: 20px;
}
.home_content_goods_item_introduce_send{
    font-size: 10px;
    color: #8b8b8b;
    height: 20px;
    line-height: 20px;
}
.home_content_goods_item_introduce_tag van-tag{
    margin-right: 2px;
}
