/* pages/home/home.wxss */
.home{
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    color: #333;
}
.home_header{
    height: 80px;
}
.home_header_location{
    padding-left: 10px;
}
.home_header_location_text{
    font-size: 14px;
    color: #333;
}
.home_header_location_icon{
    margin-left: 10px;
    margin-top: 0px;
}
.home_content{
    height: calc(100vh - 80px);
    width: 100vw;
}
.home_content_swiper{
    padding: 0 10px;
}
.home_content_swiper image{
	width: 100%;
	height: 100%;
}
.home_content_type_item{
    text-align: center;
    height: 50px;
    margin: 10px 0;
}
.home_content_type_item_icon{
    width: 30px;
    height: 30px;
    border-radius: 100%;
    background: #9ef05c;
    display: inline-block;
    font-size: 26px;
}
.home_content_type_item_icon image{
    width: 100%;
    height: 100%;
    border-radius: 100%;
}
.home_content_type_item_text{
    font-size: 14px;
    height: 20px;
    color: #333;
}
/* 免费霸王餐 */
.home_content_free{
    height: 170px;
    background: #ffe66b;
    margin: 10px 0;
    padding-top: 2px;
}
.home_content_free_title{
    margin-top: 10px;
    font-size: 14px;
    color: #333;
    height: 20px;
    line-height: 20px;
    margin-left: 10px;
}
.home_content_free_content{
    height: 128px;
    margin-top: 10px;
    width: 100%;
    white-space: nowrap
}
.home_content_free_item{
    height: 100px;
    width: 110px;
    padding: 10px 0;
    background: #fff;
    text-align: center;
    box-shadow: 1px 1px 5px gray;
    margin-right: 10px;
    display: inline-block;
}
.home_content_free_item:first-child{
    margin-left: 10px;
}
.home_content_free_item_img{
    margin-top: 10px;
    height: 60px;
    width: 60px;
    background: #fff;
}
.home_content_free_item_img image{
    width: 60px;
    height: 60px;
}
.home_content_free_item_desc{
    height: 20px;
    font-size: 14px;
    line-height: 20px;
    color: #333;
    max-width: 100px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.home_content_free_item_desc text{
    color: #333;
    max-width: 100px;
    display: inline-block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.home_content_free_item_price{
    height: 20px;
    line-height: 20px;
    font-size: 14px;
    color: #333;
    /* text-decoration:line-through  */
}
.home_content_free_item_price_discount{
    text-decoration:line-through;
    font-size: 12px;
    color: gray;
}
.home_content_goods{
    background: #fff;
}
.home_content_goods_title{
    font-size: 14px;
    height: 20px;
    line-height: 20px;
    margin: 10px;
}
.home_content_goods_item{
    height: 100px;
}
.home_content_goods_item_img{
    height: 100px;
    width: 100px;
    text-align: center;
    padding-top: 10px;
}
.home_content_goods_item_img image{
    height: 80px;
    width: 80px;
}
.home_content_goods_item_introduce{
    width: calc(100vw - 110px);
    height: 100%;
    font-size: 14px;
    padding-top: 10px;
    border-bottom: 1px solid #ededed;
}
.home_content_goods_item_introduce_title{
    font-size: 14px;
    height: 20px;
    line-height: 20px;
}
.home_content_goods_item_introduce_sale{
    font-size: 10px;
    color: #8b8b8b;
    height: 20px;
    line-height: 20px;
}
.home_content_goods_item_introduce_send{
    font-size: 10px;
    color: #8b8b8b;
    height: 20px;
    line-height: 20px;
}
.home_content_goods_item_introduce_tag van-tag{
    margin-right: 2px;
}
