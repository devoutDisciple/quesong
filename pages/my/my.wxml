<view class="my">
    <van-row custom-class="my_userinfo">
        <van-col span="22">
            <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 登录 </button>
            <block wx:else>
            <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
            <text class="userinfo-nickname">{{userInfo.nickName}}</text>
            </block>
        </van-col>
    </van-row>
    <van-row custom-class="empty"></van-row>
    <van-row custom-class="my_list">
        <van-row custom-class="my_list_item">
            <van-col custom-class="my_list_item_icon" span="2">
                <van-icon name="location-o" />
            </van-col>
            <van-col span="20">
                <text>我的收货地址</text>
            </van-col>
            <van-col span="2">
                <van-icon name="arrow" />
            </van-col>
        </van-row>
        <van-row custom-class="my_list_item">
            <van-col custom-class="my_list_item_icon" span="2">
                <van-icon name="service-o" />
            </van-col>
            <van-col span="20">
                <text>我的客服</text>
            </van-col>
            <van-col span="2">
                <van-icon name="arrow" />
            </van-col>
        </van-row>
        <van-row custom-class="my_list_item my_list_item_last">
            <van-col custom-class="my_list_item_icon" span="2">
                <van-icon name="location-o" />
            </van-col>
            <van-col span="20">
                <text>意见反馈</text>
            </van-col>
            <van-col span="2">
                <van-icon name="arrow" />
            </van-col>
        </van-row>
    </van-row>
</view>
