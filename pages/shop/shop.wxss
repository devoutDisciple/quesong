/* pages/shop/shop.wxss */
.shop{
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    font-size: 14px;
    color: #333;
    background: #fff;
}
.shop_header{
    height: 80px;
    padding: 10px;
    background: #333;
}
.shop_header_img{
    height: 80px;
    width: 80px;
}
.shop_header_img image{
    height: 100%;
    width: 100%;
}
.shop_header_desc{
    height: 80px;
    width: calc(100vw - 110px);
    margin-left: 10px;
    color: #fff;
}
.shop_header_desc_text{
    height: 40px;
    font-size: 12px;
    line-height: 15px;
    overflow: hidden;
}
.shop_header_desc_send, .shop_header_desc_tag{
    font-size: 12px;
    height: 20px;
    line-height: 20px;
}
.shop_header_desc_tag_item{
    margin-right: 10px;
}

/* 商家列表 */
.shop_content{
    height: calc(100vh - 150px);
    overflow: hidden;
}
.shop_content_list{
    height: calc(100vh - 194px);
}
.shop_content_list_type{
    height: 100%;
    width: 100px;
}
.shop_content_list_type_scroll{
    height: 100%;
    width: 100px;
}
.shop_content_list_type_item{
    height: 60px;
    line-height: 60px;
    background: #f8f8f8;
    text-align: center;
}
.shop_content_list_type_item_active{
    height: 60px;
    line-height: 60px;
    text-align: center;
    background: #fff;
    border-left: 2px solid #91f1d1;
}
.shop_content_list_goods{
    width: calc(100vw - 100px);
    height: 100%;
}
.shop_content_list_goods_scroll{
    width: 100%;
    height: 100%;
}
.shop_content_list_goods_title{
    height: 20px;
    font-size: 14px;
    margin: 10px;
    line-height: 20px;
    color: #333;
}
.shop_content_list_goods_item{
    height: 100px;
}
.shop_content_list_goods_item_img{
    height: 100px;
    width: 100px;
    text-align: center;
    padding-top: 10px;
}
.shop_content_list_goods_item_img image{
    height: 80px;
    width: 80px;
}
.shop_content_list_goods_item_introduce{
    width: calc(100vw - 210px);
    height: 100%;
    font-size: 14px;
    padding-top: 10px;
}
.shop_content_list_goods_item_introduce_title{
    font-size: 14px;
    height: 20px;
    line-height: 20px;
}
.shop_content_list_goods_item_introduce_desc, .shop_content_list_goods_item_introduce_sale{
    font-size: 10px;
    color: #8b8b8b;
    height: 20px;
    line-height: 20px;
}
.shop_content_list_goods_item_introduce_send{
    font-size: 14px;
    color: red;
    height: 30px;
    line-height: 30px;
}
.shop_content_list_goods_item_introduce_send_discount{
	font-size: 10px;
	text-decoration: line-through;
	color: #8b8b8b;
}
.shop_content_list_goods_item_introduce_send_icon{
    text-align: right;
}
.shop_content_list_goods_item_introduce_send_icon image{
    width: 25px;
    height: 25px;
    border-radius: 100%;
}
/* 底部 */
.shop_footer{
    height: 50px;
	background: #4c4c4c;
	position: relative;
}
.shop_footer_car{
	position: absolute;
	left: 10px;
	bottom: 10px;
	width: 60px;
	height: 60px;
	border-radius: 50%;
	background: #3a3a3a;
	border: 5px solid #4c4c4c;
}
.shop_footer_car image{
	width: 50%;
	height: 50%;
	border-radius: 100%;
	margin-left: 25%;
	margin-top: 25%;
}
.shop_footer_total{
	margin-left: 80px;
	color: #fff;
	font-size: 16px;
	height: 26px;
	line-height: 26px;
	padding-right: 5px;
	margin-top: 12px;
	border-right: 2px solid #5a5a5a;
	margin-right: 5px;
	font-weight: 700;
}
.shop_footer_send{
	height: 26px;
	line-height: 26px;
	color: #979797;
	margin-top: 12px;
}
.shop_footer_accounts{
	position: absolute;
	right: 0;
	top: 0;
	width: 100px;
	height: 50px;
	background: #3a3a3a;
	color: #8e8e8e;
	line-height: 50px;
	text-align: center;
}











